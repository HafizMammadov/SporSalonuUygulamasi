@model IEnumerable<SporSalonuUygulamasi.Models.Trainer>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenör Kadrosu</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Eğitmen Ekle</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Çalıştığı Salon</th>
                <th>Verdiği Hizmet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.ExpertiseArea</td>
                    <td>
                        <span class="badge bg-info text-dark">@item.Gym?.Name</span>
                    </td>
                    <td>
                        <span class="badge bg-secondary">@item.Service?.Name</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>