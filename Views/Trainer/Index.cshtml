@model IEnumerable<SporSalonuUygulamasi.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<h1>Eğitmenler Listesi</h1>

<div class="alert alert-info">
    <strong>Toplam Eğitmen Sayısı:</strong> @ViewBag.Count
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Eğitmen Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Uzmanlık Alanı</th>
            <th>Mesai Saatleri</th>
            <th>Spor Salonu</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpertiseArea)</td>

                <td>@item.WorkStart - @item.WorkEnd</td>

                <td>
                    @if (item.Gym != null)
                    {
                        @item.Gym.Name
                    }
                    else
                    {
                        <span class="text-muted">-Atanmamış-</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu eğitmeni silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>