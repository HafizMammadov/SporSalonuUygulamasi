@model SporSalonuUygulamasi.Models.Trainer

@{
    ViewData["Title"] = "Eğitmeni Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-pencil"></i> Eğitmeni Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.TrainerId" method="post">
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Çalışacağı Salon <span class="text-danger">*</span></label>
                            <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymList" required>
                                <option value="">-- Bir Salon Seçiniz --</option>
                            </select>
                            <span asp-validation-for="GymId" class="text-danger small"></span>
                        </div>

                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ad <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Soyad <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Uzmanlık Alanı <span class="text-danger">*</span></label>
                            <input asp-for="ExpertiseArea" class="form-control" required />
                            <span asp-validation-for="ExpertiseArea" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Saatlik Ücret (₺) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="HourlyRate" type="number" class="form-control" step="0.01" min="0.01" required />
                                <span class="input-group-text">₺/saat</span>
                            </div>
                            <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label fw-bold">Çalışma Başlangıç <span class="text-danger">*</span></label>
                                <input type="time" name="acilisSaati" class="form-control" value="@ViewBag.Acilis" required />
                            </div>
                            <div class="col">
                                <label class="form-label fw-bold">Çalışma Bitiş <span class="text-danger">*</span></label>
                                <input type="time" name="kapanisSaati" class="form-control" value="@ViewBag.Kapanis" required />
                            </div>
                        </div>
                        <span asp-validation-for="WorkingHours" class="text-danger small"></span>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                                <label asp-for="IsAvailable" class="form-check-label fw-bold">
                                    Müsait (Randevu alınabilir)
                                </label>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Tamam
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
