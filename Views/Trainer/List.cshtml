@model IEnumerable<SporSalonuUygulamasi.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenleri Listele";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-person-badge"></i> Eğitmen Kadrosu</h2>
        <div>
            <a asp-action="Create" class="btn btn-success">+ Yeni Eğitmen Ekle</a>
            <a asp-action="Index" class="btn btn-secondary">Menüye Dön</a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz kayıtlı eğitmen bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-hover shadow-sm border">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Uzmanlık Alanı</th>
                    <th>Çalıştığı Salon</th>
                    <th>Saatlik Ücret</th>
                    <th>Çalışma Saatleri</th>
                    <th>Müsaitlik</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.FullName</strong></td>
                        <td>@item.ExpertiseArea</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.Gym?.Name</span>
                        </td>
                        <td><span class="text-success fw-bold">@item.HourlyRate.ToString("C2")/saat</span></td>
                        <td><span class="badge bg-secondary">@item.WorkingHours</span></td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success">Müsait</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Meşgul</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.TrainerId" method="post" class="d-inline"
                                  onsubmit="return confirm('Bu eğitmeni silmek istediğinizden emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
