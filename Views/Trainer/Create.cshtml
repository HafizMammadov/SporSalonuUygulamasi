@model SporSalonuUygulamasi.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
}

<h1>Yeni Eğitmen Ekle</h1>

<h4>Eğitmen Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExpertiseArea" class="control-label">Uzmanlık Alanı</label>
                <input asp-for="ExpertiseArea" class="form-control" />
                <span asp-validation-for="ExpertiseArea" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WorkStart" class="control-label">Mesai Başlangıç</label>
                <input asp-for="WorkStart" type="time" class="form-control" />
                <span asp-validation-for="WorkStart" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WorkEnd" class="control-label">Mesai Bitiş</label>
                <input asp-for="WorkEnd" type="time" class="form-control" />
                <span asp-validation-for="WorkEnd" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GymId" class="control-label">Spor Salonu</label>
                <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymId">
                    <option value="">-- Salon Seçiniz --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}