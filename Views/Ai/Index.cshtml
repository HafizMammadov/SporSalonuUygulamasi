@model SporSalonuUygulamasi.Models.AiViewModel
@{
    ViewData["Title"] = "AI Hocam";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">🤖 Yapay Zeka Hocam</div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <label>Yaş</label> <input asp-for="Age" class="form-control mb-2" type="number" min="18" required />
                        <label>Boy (cm)</label> <input asp-for="Height" class="form-control mb-2" type="number" min="100" required />
                        <label>Kilo (kg)</label> <input asp-for="Weight" class="form-control mb-2" type="number" min="40" required />
                        <label>Cinsiyet</label>
                        <select asp-for="Gender" class="form-control mb-2">
                            <option>Erkek</option>
                            <option>Kadın</option>
                        </select>
                        <label>Hedef</label>
                        <select asp-for="Goal" class="form-control mb-3">
                            <option>Kilo Vermek</option>
                            <option>Kas Yapmak</option>
                        </select>
                        <button class="btn btn-warning w-100">Plan Oluştur</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (Model.AiResponse != null)
            {
                <div class="alert alert-success">
                    @Html.Raw(Model.AiResponse)
                </div>
            }
            else
            {
                <div class="alert alert-info p-4">
                    <h4>Bilgilerinizi girin</h4>
                    <p>Size özel beslenme ve antrenman programınızı hazırlamak için soldaki formu doldurun.</p>
                </div>
            }
        </div>
    </div>
</div>
