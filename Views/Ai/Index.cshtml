@model SporSalonuUygulamasi.Models.AiConsultantViewModel

@{
    ViewData["Title"] = "AI Sağlık Danışmanı";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="glass-card p-4">
            <h2 class="text-center text-white mb-4">
                <i class="bi bi-robot"></i> Yapay Zeka Sağlık Danışmanı
            </h2>
            <p class="text-white-50 text-center mb-4">
                Fiziksel özelliklerinizi ve hedeflerinizi girin, yapay zeka sizin için en uygun diyet ve egzersiz programını oluştursun.
            </p>

            <form asp-action="GeneratePlan" method="post">
                <div class="row g-3">
                    <div class="col-md-4">
                         <div class="form-floating">
                            <input asp-for="Age" class="form-control glass-input" placeholder="Yaş" />
                            <label asp-for="Age">Yaş</label>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="form-floating">
                            <input asp-for="Height" class="form-control glass-input" placeholder="Boy (cm)" />
                            <label asp-for="Height">Boy (cm)</label>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="form-floating">
                            <input asp-for="Weight" class="form-control glass-input" placeholder="Kilo (kg)" />
                            <label asp-for="Weight">Kilo (kg)</label>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Gender" class="form-select glass-input">
                                <option value="">Seçiniz...</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                            </select>
                            <label asp-for="Gender">Cinsiyet</label>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Goal" class="form-select glass-input">
                                <option value="">Seçiniz...</option>
                                <option value="Kilo Vermek">Kilo Vermek</option>
                                <option value="Kas Yapmak">Kas Yapmak</option>
                                <option value="Formu Korumak">Formu Korumak</option>
                                <option value="Güçlenmek">Güçlenmek</option>
                            </select>
                            <label asp-for="Goal">Hedef</label>
                            <span asp-validation-for="Goal" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-12">
                         <div class="form-floating">
                            <select asp-for="ActivityLevel" class="form-select glass-input">
                                <option value="">Seçiniz...</option>
                                <option value="Hareketsiz">Hareketsiz (Masa başı iş, spor yok)</option>
                                <option value="Az Hareketli">Az Hareketli (Haftada 1-2 gün spor)</option>
                                <option value="Orta">Orta (Haftada 3-4 gün spor)</option>
                                <option value="Çok Hareketli">Çok Hareketli (Haftada 5+ gün spor)</option>
                            </select>
                            <label asp-for="ActivityLevel">Aktivite Seviyesi</label>
                            <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row g-3 mt-2">
                    <div class="col-md-12">
                         <div class="form-floating">
                            <textarea asp-for="AdditionalNotes" class="form-control glass-input" placeholder="Ek Notlar" style="height: 100px"></textarea>
                            <label asp-for="AdditionalNotes">Ek Notlar (Opsiyonel)</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-grid">
                    <button type="submit" class="btn btn-primary glass-button btn-lg">
                        <i class="bi bi-stars"></i> Planı Oluştur
                    </button>
                    <div class="text-muted text-center mt-2">
                        <small>Not: İşlem birkaç saniye sürebilir.</small>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
