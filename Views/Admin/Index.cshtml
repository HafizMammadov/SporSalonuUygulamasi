@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">Admin Kontrol Paneli</h1>

    <div class="row justify-content-center">
        <!-- Salonlar Kartı -->
        <div class="col-md-5 mb-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <div class="mb-3">
                        <i class="bi bi-building fs-1 text-primary"></i>
                    </div>
                    <h3 class="card-title">Salonlar</h3>
                    <p class="card-text text-muted">Spor salonlarını listele, düzenle ve yeni salon ekle.</p>
                    <a asp-controller="Gym" asp-action="Index" class="btn btn-primary btn-lg w-100 mt-3">
                        Salonları Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- Eğitmenler Kartı -->
        <div class="col-md-5 mb-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <div class="mb-3">
                        <i class="bi bi-person-badge fs-1 text-success"></i>
                    </div>
                    <h3 class="card-title">Eğitmenler</h3>
                    <p class="card-text text-muted">Eğitmen kadrosunu görüntüle, yeni eğitmen al ve bilgilerini güncelle.</p>
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-success btn-lg w-100 mt-3">
                        Eğitmenleri Yönet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
    }
</style>
