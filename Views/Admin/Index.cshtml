@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">

    <div class="row mb-5">
        <div class="col text-center">
            <h1 class="fw-bold">
                <i class="bi bi-speedometer2 me-2 text-primary"></i>
                Admin Kontrol Paneli
            </h1>
            <p class="text-muted">
            </p>
        </div>
    </div>

    <div class="row justify-content-center g-4">

        <!-- Salonlar -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-building fs-1 text-primary mb-3"></i>
                    <h4 class="fw-bold">Salonlar</h4>
                    <p class="text-muted">Salonları listele, düzenle ve yeni salon ekle.</p>
                    <a asp-controller="Gym" asp-action="Index" class="btn btn-primary w-100">
                        Salonları Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- Eğitmenler -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-person-badge fs-1 text-success mb-3"></i>
                    <h4 class="fw-bold">Eğitmenler</h4>
                    <p class="text-muted">Eğitmenleri görüntüle ve yönet.</p>
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-success w-100">
                        Eğitmenleri Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- Üyeler -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-people fs-1 text-warning mb-3"></i>
                    <h4 class="fw-bold">Üyeler</h4>
                    <p class="text-muted">Üye bilgilerini yönetin.</p>
                    <a asp-controller="Members" asp-action="Index" class="btn btn-warning text-white w-100">
                        Üyeleri Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- Randevular -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow h-100 border-0 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-calendar-check fs-1 text-info mb-3"></i>
                    <h4 class="fw-bold">Randevular</h4>
                    <p class="text-muted">Tüm randevuları yönetin.</p>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-info text-white w-100">
                        Randevuları Yönet
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-6px);
        }
</style>
