@model SporSalonuUygulamasi.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 glass-effect">
            <div class="card-body p-5">
                <h2 class="text-center text-primary fw-bold mb-4">Profil Bilgileri</h2>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Profile" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">E-posta</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="text-muted">E-posta adresi değiştirilemez.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BirthDate" class="form-label fw-bold">Doğum Tarihi</label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">Bilgileri Güncelle</button>
                    </div>
                </form>

                <hr class="my-5">

                <div class="text-center">
                    <h4 class="text-danger fw-bold mb-3">Hesap İşlemleri</h4>
                    <p class="text-muted">Hesabınızı yönetin veya oturumu kapatın.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-secondary rounded-pill px-4">Çıkış Yap</a>
                        <button type="button" class="btn btn-outline-danger rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            Hesabımı Sil
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-card border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger fw-bold" id="deleteModalLabel">Hesabı Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Hesabınızı silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">İptal</button>
                <form asp-action="DeleteAccount" method="post">
                    <button type="submit" class="btn btn-danger rounded-pill">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
