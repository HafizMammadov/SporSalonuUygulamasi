@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- HERO -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">
            Spor Salonu Yönetim Sistemi
        </h1>
        <p class="lead mt-3">
            Randevu al, eğitmenlerle çalış, spor hayatını planla
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login"
               class="btn btn-success btn-lg mt-3">
                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
            </a>
        }
        else
        {
            <a asp-controller="Appointment" asp-action="Create"
               class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-calendar-plus"></i> Randevu Al
            </a>
        }
    </div>
</div>

<!-- FEATURES -->
<div class="container mt-5">
    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-calendar-check fs-1 text-primary"></i>
                    <h4 class="mt-3">Kolay Randevu</h4>
                    <p class="text-muted">
                        Uygun eğitmeni seç, tarih belirle, anında randevu oluştur.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-person-badge fs-1 text-success"></i>
                    <h4 class="mt-3">Uzman Eğitmenler</h4>
                    <p class="text-muted">
                        Alanında uzman eğitmenlerle birebir çalışma imkânı.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-building fs-1 text-warning"></i>
                    <h4 class="mt-3">Birden Fazla Salon</h4>
                    <p class="text-muted">
                        Farklı salonları ve hizmetleri tek sistemden yönet.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- ADMIN SHORTCUT -->
@if (User.IsInRole(SporSalonuUygulamasi.Utility.Roles.Admin))
{
    <div class="container mt-5">
        <div class="alert alert-danger d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-shield-lock"></i>
                <strong>Yönetici Modu:</strong> Yönetim paneline erişiminiz var.
            </div>
            <a asp-controller="Admin" asp-action="Index"
               class="btn btn-danger">
                Admin Paneli
            </a>
        </div>
    </div>
}
