@model SporSalonuUygulamasi.Models.Gym

@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-pencil-square"></i> Salon Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="gymForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Salon Adı <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: FitLife Spor Salonu" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Adres <span class="text-danger">*</span></label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Salon adresi" required></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                             <label class="form-label fw-bold">Çalışma Saatleri <span class="text-danger">*</span></label>
                             <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00 - 22:00" required />
                             <span asp-validation-for="WorkingHours" class="text-danger small"></span>
                        </div>

                        <hr />

                        <!-- Service items placeholder if needed, functionality requires backend support -->

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}