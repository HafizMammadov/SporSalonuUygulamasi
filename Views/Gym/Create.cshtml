@model SporSalonuUygulamasi.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <div class="card shadow-lg border-0">
                <!-- HEADER -->
                <div class="card-header text-white"
                     style="background: linear-gradient(135deg, #28a745, #218838);">
                    <h3 class="mb-0">
                        <i class="bi bi-building-add me-2"></i>
                        Yeni Spor Salonu Oluştur
                    </h3>
                    <small class="opacity-75">
                        Salon bilgilerini ve sunulan hizmetleri tanımlayın
                    </small>
                </div>

                <div class="card-body p-4">

                    <!-- BİLGİ KUTUSU -->
                    <div class="alert alert-light border mb-4">
                        <i class="bi bi-info-circle text-primary me-1"></i>
                        <strong>Bilgi:</strong>
                        Salon oluştururken en az <u>bir hizmet</u> eklenmelidir.
                    </div>

                    <form asp-action="Create" method="post" id="gymForm">

                        <!-- SALON BİLGİLERİ -->
                        <h5 class="mb-3">
                            <span class="badge bg-primary me-2">1</span>
                            Salon Bilgileri
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Salon Adı</label>
                                <input asp-for="Name" class="form-control form-control-lg"
                                       placeholder="Örn: FitLife Spor Salonu" required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Adres</label>
                                <textarea asp-for="Address" class="form-control"
                                          rows="2" placeholder="Salon adresi" required></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-clock"></i> Açılış Saati
                                </label>
                                <input type="time" name="acilisSaati"
                                       class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-clock-history"></i> Kapanış Saati
                                </label>
                                <input type="time" name="kapanisSaati"
                                       class="form-control" required />
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- HİZMETLER -->
                        <h5 class="mb-3">
                            <span class="badge bg-success me-2">2</span>
                            Sunulan Hizmetler
                        </h5>

                        <div id="servicesContainer">

                            <div class="card border mb-3 service-row">
                                <div class="card-body">
                                    <div class="row align-items-end">
                                        <div class="col-md-6">
                                            <label class="form-label">Hizmet Adı</label>
                                            <input type="text" name="serviceNames"
                                                   class="form-control"
                                                   placeholder="Örn: Fitness" required />
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Saatlik Ücret</label>
                                            <div class="input-group">
                                                <input type="number" name="hourlyRates"
                                                       class="form-control"
                                                       step="0.01" min="0.01" required />
                                                <span class="input-group-text">₺</span>
                                            </div>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <button type="button"
                                                    class="btn btn-outline-danger btn-remove-service"
                                                    onclick="removeService(this)"
                                                    style="display:none;">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <button type="button"
                                class="btn btn-outline-primary btn-sm mb-4"
                                onclick="addService()">
                            <i class="bi bi-plus-circle"></i> Hizmet Ekle
                        </button>

                        <hr />

                        <!-- BUTONLAR -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Salonu Oluştur
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addService() {
            const container = document.getElementById('servicesContainer');
            const div = document.createElement('div');
            div.className = 'card border mb-3 service-row';
            div.innerHTML = `
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <label class="form-label">Hizmet Adı</label>
                            <input type="text" name="serviceNames" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Saatlik Ücret</label>
                            <div class="input-group">
                                <input type="number" name="hourlyRates"
                                       class="form-control" step="0.01" min="0.01" required />
                                <span class="input-group-text">₺</span>
                            </div>
                        </div>
                        <div class="col-md-2 text-end">
                            <button type="button"
                                    class="btn btn-outline-danger btn-remove-service"
                                    onclick="removeService(this)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>`;
            container.appendChild(div);
            updateRemoveButtons();
        }

        function removeService(btn) {
            btn.closest('.service-row').remove();
            updateRemoveButtons();
        }

        function updateRemoveButtons() {
            const rows = document.querySelectorAll('.service-row');
            rows.forEach((r, i) => {
                const btn = r.querySelector('.btn-remove-service');
                btn.style.display = rows.length > 1 ? 'inline-block' : 'none';
            });
        }

        document.addEventListener('DOMContentLoaded', updateRemoveButtons);
    </script>
}
