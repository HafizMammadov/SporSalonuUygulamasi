@model IEnumerable<SporSalonuUygulamasi.Models.Gym>

@{
    ViewData["Title"] = "Salonlar";
}

<h1>Spor Salonları</h1>

<div class="alert alert-info">
    <strong>Toplam Salon Sayısı:</strong> @ViewBag.Count
</div>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Salon Adı</th>
            <th>Adres</th>
            <th>Çalışma Saatleri</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.WorkingHours</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu salonu silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>