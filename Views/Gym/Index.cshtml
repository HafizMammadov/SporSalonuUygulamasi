@{
    ViewData["Title"] = "Salonlar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-building"></i> Salon Yönetimi</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="Create" class="btn btn-success btn-lg">
                            <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
                        </a>
                        <a asp-action="List" class="btn btn-info btn-lg text-white">
                            <i class="bi bi-list-ul"></i> Salonları Listele
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>