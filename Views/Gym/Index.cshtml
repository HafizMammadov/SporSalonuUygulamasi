@model IEnumerable<SporSalonuUygulamasi.Models.Gym>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Spor Salonu Şubeleri</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Şube Ekle</a>
    </div>

    <table class="table table-hover shadow-sm border">
        <thead class="table-dark">
            <tr>
                <th>Salon Adı</th>
                <th>Adres</th>
                <th>Çalışma Saatleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.WorkingHours</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GymId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.GymId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>