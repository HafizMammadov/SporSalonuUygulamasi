@model IEnumerable<SporSalonuUygulamasi.Models.Gym>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="container mt-4">

    <!-- Başlık ve Buton -->
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold mb-0">
                <i class="bi bi-building me-2 text-primary"></i>
                Spor Salonları
            </h2>
            <p class="text-muted mb-0">Sistemde kayıtlı tüm spor salonları</p>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-1"></i>
                Yeni Salon Ekle
            </a>
        </div>
    </div>

    <!-- Bilgi Kartı -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="text-muted mb-1">Toplam Salon</h5>
                    <h2 class="fw-bold text-primary mb-0">@ViewBag.Count</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Tablo -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Çalışma Saatleri</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                @item.Name
                            </td>
                            <td>@item.Address</td>
                            <td>
                                <span class="badge bg-secondary">
                                    @item.WorkingHours
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil"></i>
                                    Düzenle
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@item.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Bu salonu silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
