@model IEnumerable<SporSalonuUygulamasi.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmetler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre (Dk)</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.DurationMinutes)</td>
                <td>@item.Price ₺</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>