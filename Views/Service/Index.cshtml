@model IEnumerable<SporSalonuUygulamasi.Models.Service>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Verilen Hizmetler</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Hizmet Ekle</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Süre: <strong>@item.DurationMinutes dk</strong></li>
                            <li class="list-group-item">Ücret: <strong>@item.Price ₺</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>