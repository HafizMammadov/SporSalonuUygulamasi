@model SporSalonuUygulamasi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Randevu Oluştur</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceId" class="control-label">Hizmet Seçiniz</label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId">
                        <option value="">-- Hizmet Seçin --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Eğitmen Seçiniz</label>
                    <select asp-for="TrainerId" id="trainerSelect" class="form-control select2-box" asp-items="ViewBag.TrainerId">
                        <option value="">-- Eğitmen Seçin --</option>
                    </select>
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Tarih Seçiniz</label>
                    <input type="date" id="dateSelect" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Saat Seçiniz</label>
                    <select id="timeSelect" class="form-control" disabled>
                        <option>Önce Eğitmen ve Tarih Seçiniz</option>
                    </select>
                </div>

                <input type="hidden" asp-for="AppointmentDate" id="finalDateInput" />

                <div class="form-group mt-4">
                    <input type="submit" value="Randevuyu Onayla" class="btn btn-primary btn-lg" />

                    <a asp-action="Index" class="btn btn-secondary btn-lg">İptal</a>

                    <a asp-action="Index" class="btn btn-warning btn-lg text-white" style="margin-left: 10px;">📋 Randevu Listesi</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            console.log("Sistem hazır!");

            // 1. Select2 Aktif Et
            $('.select2-box').select2({
                placeholder: "Seçim Yapınız",
                allowClear: true,
                width: '100%'
            });

            // 2. Değişiklikleri Dinle
            $('#trainerSelect, #dateSelect').change(function() {
                var trainerId = $('#trainerSelect').val();
                var selectedDate = $('#dateSelect').val();
                var timeDropdown = $('#timeSelect');

                if (trainerId && selectedDate) {
                    timeDropdown.prop('disabled', true).html('<option>Hesaplanıyor...</option>');

                    $.ajax({
                        url: '/Appointment/GetAvailableHours',
                        type: 'GET',
                        data: { trainerId: trainerId, date: selectedDate },
                        success: function(data) {
                            timeDropdown.empty();
                            if (data.length === 0) {
                                timeDropdown.append('<option>Müsait saat yok!</option>');
                            } else {
                                timeDropdown.prop('disabled', false);
                                timeDropdown.append('<option value="">-- Saat Seç --</option>');
                                $.each(data, function(index, time) {
                                    timeDropdown.append('<option value="' + time + '">' + time + '</option>');
                                });
                            }
                        },
                        error: function() {
                            timeDropdown.html('<option>Saatler getirilemedi!</option>');
                            timeDropdown.prop('disabled', false);
                        }
                    });
                }
            });

            // 3. Tarih ve Saati Birleştirip Gizli Inputa Yaz
            $('#timeSelect').change(function() {
                var date = $('#dateSelect').val();
                var time = $(this).val();
                if(date && time) {
                    $('#finalDateInput').val(date + 'T' + time);
                }
            });
        });
    </script>
}