@model IEnumerable<SporSalonuUygulamasi.Models.Appointment>

@{
    ViewData["Title"] = "Tüm Randevular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-calendar-check me-2 text-primary"></i>
                Tüm Randevular
            </h2>
            <p class="text-muted mb-0">
                Sistemdeki tüm randevuları buradan yönetebilirsiniz.
            </p>
        </div>
    </div>

    <!-- Toplam Sayı -->
    <div class="alert alert-info d-flex align-items-center mb-4">
        <i class="bi bi-info-circle me-2 fs-5"></i>
        <div>
            <strong>Toplam Randevu Sayısı:</strong> @ViewBag.Count
        </div>
    </div>

    <!-- Tablo -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Eğitmen</th>
                            <th>Hizmet</th>
                            <th class="text-center">Durum</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
                                </td>

                                <td>
                                    @item.Trainer?.FirstName @item.Trainer?.LastName
                                </td>

                                <td>
                                    @item.Service?.Name
                                </td>

                                <td class="text-center">
                                    @if (item.IsConfirmed)
                                    {
                                        <span class="badge bg-success rounded-pill px-3">
                                            Onaylandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">
                                            Beklemede
                                        </span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-outline-warning btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i>
                                        Düzenle
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Bu randevuyu silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                            Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
