@model SporSalonuUygulamasi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Randevu Düzenle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            
            <div class="form-group mb-3">
                <label asp-for="AppointmentDate" class="control-label">Tarih ve Saat</label>
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TrainerId" class="control-label">Eğitmen</label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ServiceId" class="control-label">Hizmet</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsConfirmed" /> @Html.DisplayNameFor(model => model.IsConfirmed)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>
