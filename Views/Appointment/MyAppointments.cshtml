@model IEnumerable<SporSalonuUygulamasi.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">

    <!-- Sayfa Başlığı -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-calendar-event me-2 text-primary"></i>
                Randevularım
            </h2>
            <p class="text-muted mb-0">
                Aldığınız tüm randevuları aşağıdaki listede görüntüleyebilirsiniz.
            </p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Randevu Listesi Card -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <span class="fw-bold">Randevu Listesi</span>
            </div>

            <div class="card-body p-0">

                <!-- Responsive Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Tarih & Saat</th>
                                <th>Spor Salonu</th>
                                <th>Eğitmen</th>
                                <th class="text-center">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">
                                            @item.AppointmentDate.ToString("dd.MM.yyyy")
                                        </div>
                                        <small class="text-muted">
                                            @item.AppointmentDate.ToString("HH:mm")
                                        </small>
                                    </td>

                                    <td>
                                        @if (item.Trainer?.Gym != null)
                                        {
                                            <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                            @item.Trainer.Gym.Name
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.Trainer != null)
                                        {
                                            <i class="bi bi-person-badge text-primary me-1"></i>
                                            @item.Trainer.FirstName @item.Trainer.LastName
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @if (item.IsConfirmed)
                                        {
                                            <span class="badge bg-success rounded-pill px-3 py-2">
                                                Onaylandı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                                Beklemede
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    }
    else
    {
        <!-- Boş Durum -->
        <div class="alert alert-info shadow-sm d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2 fs-5"></i>
            <div>
                Henüz bir randevu almadınız.
                <a asp-action="Create" class="alert-link ms-1">
                    Hemen randevu alın!
                </a>
            </div>
        </div>
    }

</div>
