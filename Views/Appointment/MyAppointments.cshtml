@model IEnumerable<SporSalonuUygulamasi.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-calendar-event"></i> Randevularım
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Tarih ve Saat</th>
                            <th>Spor Salonu</th>
                            <th>Eğitmen</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy")</span>
                                    <span class="text-muted ms-2">@item.AppointmentDate.ToString("HH:mm")</span>
                                </td>
                                <td>
                                    @if(item.Trainer?.Gym != null)
                                    {
                                        <i class="bi bi-geo-alt-fill text-danger"></i> @item.Trainer.Gym.Name
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if(item.Trainer != null)
                                    {
                                        <i class="bi bi-person-badge text-primary"></i> @item.Trainer.FirstName @item.Trainer.LastName
                                    }
                                </td>
                                <td>
                                    @if (item.IsConfirmed)
                                    {
                                        <span class="badge bg-success rounded-pill px-3">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">Beklemede</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle-fill"></i> Henüz bir randevu almadınız. <a asp-action="Create" class="alert-link">Hemen randevu alın!</a>
        </div>
    }
</div>
